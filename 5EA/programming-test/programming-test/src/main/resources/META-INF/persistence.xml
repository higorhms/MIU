<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="ProgrammingTest1">
        <class>com.entities.Farmer</class>
        <class>com.entities.Animal</class>
        <class>com.entities.Cow</class>
        <class>com.entities.Sheep</class>
        <class>com.entities.Farm</class>
    <properties>
        <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        <property name="jakarta.persistence.jdbc.user" value="root"/>
        <property name="jakarta.persistence.jdbc.password" value="password"/>
        <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ProgrammingTestDB?createDatabaseIfNotExist=true"/>
        <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
    </persistence-unit>
</persistence>
